{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "module": "ES6",
    "target": "es2022",
    "strict": true,
    "noEmitOnError": true,
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
