{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ES6",
    "target": "es2022",
    "strict": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution":"node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}